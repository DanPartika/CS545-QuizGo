{{!Page where user can upload their vocab list, must be logged in}}
{{#if error}}
<h2> {{title}} </h2>
<p class="error">{{error}}</p>
{{/if}}
<h1>Add word-definition pairs to {{list.name}}</h1>
<h2>Name: {{list.name}}</h2> 
<table>
  <thead>
  <tr>
    <th>Word</th>
    <th>Definition</th>
  </tr>
  </thead>
  <tbody>
    {{#each list.words}}
      <tr>
        <td>{{this}}</td>
        <td>{{lookup ../list.definitions @index}}</td>
      </tr>
    {{else}}
      <tr>
        <td colspan="2">No words yet!</td>
      </tr>
    {{/each}}
  </tbody>
</table>
<form id="wordListform" action="/lists/addList/{{list._id}}" method="POST">
  <label for="wordInput">Enter word here:</label>
  <input for="wordInput" name="wordInput" type="text" id="wordInput" required/>
  
  <label for="definitionInput">Enter definition here:</label>
  <input for="definitionInput" name="definitionInput" type="text" id="definitionInput" required/>
  <button type="submit">Submit</button>
</form>
{{#if list}}
  <a href="/lists/list/{{{list._id}}}">View list</a>
{{else}}
  <a href="/lists/list/{{{list._id}}}">View list</a>
{{/if}}