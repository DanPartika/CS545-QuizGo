{{#if user.username}}
  <br>
  <br>
  <h2>Welcome back {{user.username}}!</h2>
  <dl>
    <dt>First Name</dt>
    <dd>{{user.firstName}}</dd>
    <dt>Last Name</dt>
    <dd>{{user.lastName}}</dd>
    <dt>Email</dt>
    <dd>{{user.email}}</dd>
    <dt>Account Created</dt>
    <dd>{{user.userCreated}}</dd>
  </dl>

  {{#if userLists}}
    <h3>List of all user posted lists:</h3>

    {{#each userLists}}
      <li>
        <a href="/lists/list/{{this._id}}">{{this.name}}</a>
        <form id="editList-form" action="/lists/editList/{{this._id}}" method="GET">
          <button type="submit" class="user-button"> Edit List </button>
        </form>
        <form id="deleteList-form" action="/lists/deleteList/{{this._id}}" method="POST">
          <button type="submit" class="user-button"> Delete List </button>
        </form>
      </li>
    {{/each}}

  {{else}}
    <p>No Lists posted yet by {{user.username}}</p>
  {{/if}}

{{/if}}
<a class="add-listButton" href="/lists/createList">Click here to add apartments</a>
<br>
